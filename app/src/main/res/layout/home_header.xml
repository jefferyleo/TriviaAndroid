<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/pad_20dp"
    android:paddingLeft="@dimen/pad_20dp"
    android:paddingBottom="@dimen/pad_20dp"
    android:layout_height="match_parent"
    android:background="@color/pink_txt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:gravity="center"
        android:textSize="@dimen/txt_25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="@dimen/pad_20dp" />


    <RelativeLayout
        android:id="@+id/btn_log"
        android:padding="@dimen/pad_5dp"
        android:background="@drawable/outer_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:src="@drawable/ic_bag"
            android:layout_alignBottom="@+id/txt_logos_des"
            android:layout_alignTop="@+id/imageView4" />

        <TextView
            android:id="@+id/txt_logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo"
            android:textSize="@dimen/txt_25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_bag"
            android:layout_marginLeft="@dimen/pad_10dp" />

        <TextView
            android:id="@+id/txt_logos_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_12sp"
            android:text="@string/eye_candy"
            android:layout_below="@+id/txt_logos"
            android:textColor="@color/light_gray"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:layout_toRightOf="@+id/img_bag" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pad_10dp"
            android:src="@drawable/circular_down_arrow"
            android:id="@+id/imageView4" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rel_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:padding="@dimen/pad_5dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/dropdown_inner_gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_7dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_play"
                android:layout_weight="1"

                >

                <TextView
                    android:id="@+id/txt_ply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_play"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/play_now" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_raking"
                android:layout_weight="1"
                android:layout_gravity="right">


                <TextView
                    android:id="@+id/txt_clng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/ic_challenge"
                    android:textColor="@color/black"
                    android:text="@string/chalng" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Challang">


                <TextView
                    android:id="@+id/txt_rak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:drawableRight="@drawable/ic_ranking"
                    android:text="@string/rankings" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn_discissin">

                <TextView
                    android:id="@+id/txt_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_discussion"
                    android:text="@string/discussion" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btn_general"
        android:layout_width="match_parent"
        android:padding="@dimen/pad_5dp"
        android:background="@drawable/outer_bg"
        android:layout_marginTop="@dimen/pad_10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_bag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:src="@drawable/ic_general"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignBottom="@+id/txt_gen_des" />

        <TextView
            android:id="@+id/txt_gernal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general"
            android:textSize="@dimen/txt_25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:layout_toRightOf="@+id/img_bag1"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txt_gen_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_12sp"
            android:text="@string/all_think"
            android:layout_below="@+id/txt_gernal"
            android:textColor="@color/light_gray"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/pad_10dp"

            android:layout_toRightOf="@+id/img_bag1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pad_10dp"
            android:src="@drawable/circular_down_arrow"
            android:id="@+id/imageView5" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rel_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:padding="@dimen/pad_5dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/dropdown_inner_gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_7dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_play_gen"
                android:layout_weight="1"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_play"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/play_now" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_challang_gen"
                android:layout_gravity="right">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/ic_challenge"
                    android:textColor="@color/black"
                    android:text="@string/chalng" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_raking_gen"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:drawableRight="@drawable/ic_ranking"
                    android:text="@string/rankings" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn_discissin_gen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_discussion"
                    android:text="@string/discussion" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btn_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outer_bg"
        android:padding="@dimen/pad_5dp"
        android:layout_marginTop="@dimen/pad_10dp">

        <ImageView
            android:id="@+id/img_bag_mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:src="@drawable/ic_movie"
            android:layout_alignTop="@+id/txt_logos_mov"
            android:layout_alignBottom="@+id/txt_logos_des_mov" />

        <TextView
            android:id="@+id/txt_logos_mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie"
            android:textSize="@dimen/txt_25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:layout_toRightOf="@+id/img_bag_mov"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txt_logos_des_mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_12sp"
            android:text="@string/best_movie"
            android:layout_below="@+id/txt_logos_mov"
            android:textColor="@color/light_gray"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/pad_10dp"

            android:layout_toRightOf="@+id/img_bag_mov" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pad_10dp"
            android:src="@drawable/circular_down_arrow"
            android:id="@+id/imageView6" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rel_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginLeft="@dimen/pad_10dp"
        android:padding="@dimen/pad_5dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/dropdown_inner_gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_7dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_play_mov"
                android:layout_weight="1"

                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_play"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/play_now" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_challang_mov"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/ic_challenge"
                    android:textColor="@color/black"
                    android:text="@string/chalng" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pad_10dp"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_raking_mov"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rematch_bg"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:drawableRight="@drawable/ic_ranking"
                    android:text="@string/rankings" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_discissin_mov"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/pad_5dp"
                    android:paddingRight="@dimen/pad_10dp"
                    android:background="@drawable/btn_rematch_bg"
                    android:drawableRight="@drawable/ic_discussion"
                    android:text="@string/discussion" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>