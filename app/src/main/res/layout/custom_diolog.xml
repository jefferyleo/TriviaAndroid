<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_20dp"
        android:padding="@dimen/pad_20dp"
        android:orientation="vertical"
        android:background="@drawable/custom_bordr">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/txt_25sp"
            android:textStyle="bold"
            android:paddingBottom="@dimen/pad_10dp"
            android:text="Share Game Result"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/btn_fb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_share_facebook" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_share_twitter"
                android:id="@+id/btn_twit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"

            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_pin"
                android:src="@drawable/btn_share_pinterest" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_url"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/btn_share_url" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_share_close"
        android:layout_alignParentRight="true"
        android:padding="13dp"/>
</RelativeLayout>